
<h1>Genre</h1>
<table width=100%, border="1">
    <thead>
        <tr>
            <th>Genre</th>
            <th>SubGenre1</th>
            <th>SubGenre2</th>
            <th>SubGenre3</th>
            <th>Description</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <% @genres.each do |genre| %>
        <tr>
            <td><%= genre.genre %></td>
            <% Subgenre.where(:genre_id => genre.id).each do |subgenre|%>
            <td><%= subgenre.name %></td>
            <%end%>
            <td><%= genre.description %></td>
        </tr>
        <%end%>
    </tbody>
</table>
<%= link_to 'New Genre', new_genre_path %>
