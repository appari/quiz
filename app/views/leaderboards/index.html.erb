<p id="notice"><%= notice %></p>

<h1>Leaderboards</h1>

<table width=100% , border="4">
  <thead>
    <tr>
        <th>User</th>
      <th>Genre</th>
      <th>Subgenre</th>
      <th>Question</th>
      <th>Total qns</th>
      <th>Attempted</th>
      <th>Score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leaderboards.each do |leaderboard| %>
      <tr>
           <td><%= User.find(leaderboard.user).username %></td>
          <td><%= Genre.find(leaderboard.genre).genre %></td>
          <td><%= Subgenre.find(leaderboard.subgenre).name %></td>
        <td><%= leaderboard.question %></td>
        <td><%= leaderboard.total_qns %></td>
        <td><%= leaderboard.attempted %></td>
        <td><%= leaderboard.score %></td>
        <td><%= link_to 'Show', leaderboard %></td>
        <td><%= link_to 'Edit', edit_leaderboard_path(leaderboard) %></td>
        <td><%= link_to 'Destroy', leaderboard, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

