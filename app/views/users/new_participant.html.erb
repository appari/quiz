<% @page_title = "QUIZ" -%>
<div class= "Sign_Form">
  <h1>Add_A_Participant</h1>
  <%= form_for(:user, :url => {:controller => 'users', :action => 'create_participant', :method => 'post'}) do |f| %>

    <p>
      Username:</br> <%= f.text_field :username%>
    </p>

    <p>
      Email:</br> <%= f.text_field :email%>
    </p>

    <p>
      Password:</br> <%= f.password_field :password%>
    </p>

    <p>
      Password Confirmation:</br> <%= f.password_field :password_confirmation%>
    </p>

    <%= f.submit :Signup %>
  <% end %>

  <% if @user.errors.any? %>
	<ul class="Signup_Errors">
		<% for message_error in @user.errors.full_messages %>
			<li>* <%= message_error %></li>
	  	<% end %>
	</ul>
  <% end %>
</div>
